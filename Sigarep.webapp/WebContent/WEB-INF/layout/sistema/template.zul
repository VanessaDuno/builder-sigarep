			<include src="/WEB-INF/layout/sistema/banner.zul" />
		</north>
		<west width="260px" border="none" collapsible="true"
			splittable="true" minsize="250">
			<include src="/WEB-INF/layout/sistema/tree.zul" />
		</west>
		<center sclass="center" style="background: .logofondo" id="mainContent" autoscroll="true" border="none" 
			self="@insert(content)">
		</center>
		<south height="50px" border="none">
			<include src="/WEB-INF/layout/sistema/footer.zul" />
		</south>
	</borderlayout>
</zk>
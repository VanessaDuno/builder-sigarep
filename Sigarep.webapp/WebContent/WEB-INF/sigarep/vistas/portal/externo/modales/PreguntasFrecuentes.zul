<window id="winMostrarPreguntasMasFrecuentes" 
	title="Preguntas Frecuentes" width="75%" height="70%" closable="true"
	border="normal" contentStyle="overflow:auto" mode="modal"
	apply="org.zkoss.bind.BindComposer"
	viewModel="@id('vm') @init('sigarep.viewmodels.maestros.VMpreguntaBasica')">
	<listbox id="lbxPreguntas"
		model="@bind(vm.listaPregunta)"
		selectedItem="@bind(vm.preguntaseleccionada)"
		onSelect="@command('mostrarSeleccionada')"
		emptyMessage="No hay preguntas bÃ¡sicas registradas" mold="paging"
		pageSize="10">
		<listhead>
			<listheader label="Preguntas" align="center"
				sort="auto(pregunta)" />
			<listheader label="Respuestas" align="center"
				sort="auto(respuesta)" />
		</listhead>
		<template name="model">
			<listitem>
				<listcell label="${each.pregunta}" />
				<listcell label="${each.respuesta}" />
			</listitem>
		</template>
	</listbox>
</window>

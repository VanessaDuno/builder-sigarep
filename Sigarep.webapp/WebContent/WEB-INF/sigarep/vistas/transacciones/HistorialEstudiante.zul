					</listheader>
					
<!-- 					  <listheader label="Asignatura" align="center" -->
<!-- 						sort="auto(descripcion)" > -->
<!-- 					 </listheader> -->
				</listhead>
				<template name="model">
					<listitem selected="false">
						<listcell label="${each.codigoLapso}"></listcell>
						<listcell label="${each.nombreSancion}"></listcell>
						<listcell> 
						<combobox readonly="true" id= "cmbTipoMotivo" value="@bind(vm.nombreTipoMotivo)" 
				    width="auto" mold="rounded" model="@load(vm.listaMotivo)" >
							<template name="model">
								<comboitem  label="${each.nombreTipoMotivo}"/>
							</template>
					</combobox>	
					</listcell>
					</listitem>
				</template>
			</listbox>
			<space />
		</groupbox>

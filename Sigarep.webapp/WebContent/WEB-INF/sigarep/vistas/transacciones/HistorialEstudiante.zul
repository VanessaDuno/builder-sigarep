					emptyMessage="No hay enlaces registrados" mold="paging"
				pageSize="10">
<!-- 				onSelect="@command('buscarSancion')" -->
			
				
				<listhead>
					
					<listheader label="Lapso de la Sanción" align="center"
						sort="auto(codigoLapso)" > 
					</listheader>
					<listheader label="Tipo de Sanción" align="center"

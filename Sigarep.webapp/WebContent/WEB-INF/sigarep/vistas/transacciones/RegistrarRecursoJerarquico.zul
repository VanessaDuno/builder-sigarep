<window id="winRegistrarRecursoJerarquico"
	title="Gesti칩n :: Recurso Jer치rquico :: Registrar Recurso Jer치rquico"
	border="normal" width="100%" height="auto" style="overflow:auto"
	closable="true" contentStyle="overflow:auto" action="hide: slideUp"
	apply="org.zkoss.bind.BindComposer" onCancel="@command('closeThis')"
	viewModel="@id('vm') @init('sigarep.viewmodels.transacciones.VMRegistrarRecursoJerarquico')">
	<style src="/widgets/grid/simple/style.css" />
	<div>
		<label id="lblNroCaso" value="Nro del Caso:" />
		<textbox id="txtNroCaso" cols="23" maxlength="30"
			value="@bind(vm.sancionadoSeleccionado.numeroCaso)"
			readonly="true">
		</textbox>
	</div>
	<space />
	<groupbox id="grbDatosEstudiante">
		<caption id="lblDatosEstudiante" label="Datos del Estudiante" />
		<grid id="grdDatosEstudiante">
			<rows>
				<row>
					<label id="lblCedula" value="Cedula: " />
					<textbox id="txtCedula" cols="23" maxlength="30"
						readonly="true"
						value="@bind(vm.sancionadoSeleccionado.id.cedulaEstudiante)"
						width="200px">
					</textbox>
					<label id="lblPrograma" value="Programa: " />
					<textbox id="txtPrograma" cols="23" maxlength="30"
						value="@bind(vm.sancionadoSeleccionado.estudianteSancionado.estudiante.programaAcademico.nombrePrograma)"
						readonly="true" width="200px">
					</textbox>
				</row>
				<row>
					<label id="lblNombres" value="Nombres: " />
					<textbox id="txtNombres" cols="23" maxlength="30"
						value="@bind(vm.nombres)" readonly="true" width="200px">
					</textbox>
					<label id="lblApellidos" value="Apellidos: " />
					<textbox id="txtApellidos" cols="23" maxlength="30"
						value="@bind(vm.apellidos)" readonly="true" width="200px">
					</textbox>
				</row>
			</rows>
		</grid>
	</groupbox>
	<groupbox id="grbDatosSancion">
		<caption id="lblDatosSancion" label="Datos de la Sancion" />
		<grid>
			<rows>
				<row>
					<label id="lblTiposancion"
						value="Tipo de Sancion: " />
					<textbox id="txtTipoSancion" cols="23"
						maxlength="30" readonly="true"
						value="@bind(vm.sancionadoSeleccionado.estudianteSancionado.sancionMaestro.nombreSancion)">
					</textbox>
					<label id="lblLapsosancion"
						value="Lapso de Sancion: " />
					<textbox id="txtLapsosancion" cols="23"
						maxlength="30"
						value="@bind(vm.sancionadoSeleccionado.estudianteSancionado.lapsoAcademico.codigoLapso)"
						readonly="true">
					</textbox>
				</row>
				<row>
					<label id="lblPeriodosancion"
						value="Periodo de Sancion: " />
					<textbox id="txtPeridosancion" cols="23"
						maxlength="30" value="1 Semestre" readonly="true">
					</textbox>
					<label id="lblAsignaturaPeriodos"
						value="@bind(vm.labelAsignaturaLapsosConsecutivos)" />
					<textbox id="txtAsignatura" cols="55" maxlength="30"
						value="@bind(vm.asignaturaLapsosConsecutivos)" readonly="true">
					</textbox>
				</row>
			</rows>
		</grid>
	</groupbox>
	<groupbox id="grbDatosRecurso">
		<caption id="lblDatosRecurso" label="Datos del Recurso" />
		<grid>
			<columns>
				<column align="right" />
				<column align="left" />
			</columns>
			<rows>
				<row>
					<hlayout>
						<hbox>
							<button
								label="Cargar Carta de Recurso Jer치rquico" id="btnDocumento"
								upload="true"
								onUpload="@command('cargarCartaReconsideracion',upload=event)"
								image="/imagenes/iconos/cargar.png" mold="trendy">
							</button>
							<label id="lblDocumento"
								value="@bind(vm.nombreDoc)">
							</label>
						</hbox>
					</hlayout>
				</row>
				<row></row>
			</rows>
		</grid>
	</groupbox>
	<groupbox>
		<caption id="lblDatosRecaudos" label="Recaudos Entregados" />
		<listbox model="@bind(vm.listaRecaudos)"
			emptyMessage="No hay recaudos registrados" mold="paging"
			pageSize="5">
			<listhead>
				<listheader label="Motivos" width="35%" align="center"
					sort="auto(nombreMotivo)" />
				<listheader label="Recaudos" width="35%" align="center"
					sort="auto(nombreRecaudo)" />
				<listheader label="Documentos Cargados" width="30%"
					align="center" />
			</listhead>
			<template name="model">
				<listitem>
					<listcell
						label="${each.getMotivo().getTipoMotivo().getNombreTipoMotivo()}" />
					<listcell
						label="${each.getRecaudo().getNombreRecaudo()}" />
					<listcell
						label="${each.getSoporte().getDocumento().getNombreDocumento()}" />
					<!-- 					<listcell> -->
					<!-- 						<a label="${each.getSoporte().getDocumento().getNombreDocumento()}" -->
					<!-- 							onClick="@command('descargarDocumento', componente=self)"> -->
					<!-- 							<custom-attributes -->
					<!-- 								idRecaudo="${each.idRecaudo}" /> -->
					<!-- 						</a> -->
					<!-- 					</listcell> -->
				</listitem>
			</template>
		</listbox>
	</groupbox>
	<div align="right">
		<hbox>
			<div align="right" height="100%">
				<button id="btnGuardar" width="auto" height="auto"
					label="Guardar" image="/imagenes/iconos/guardar.png"
					orient="horizontal" mold="trendy"
					onClick="@command('registrarSolicitudApelacion')" />
			</div>
			<div align="right" height="100%">
				<button id="btnCancelar" width="auto" height="auto"
					label="Cancelar" image="/imagenes/iconos/cancelar.png"
					mold="trendy" orient="horizontal" />
			</div>
			<div align="right" height="100%">
				<button id="btnCerrar" mold="trendy" width="auto"
					height="auto" label="Cerrar" image="/imagenes/iconos/cerrar.png"
					orient="horizontal"
					onClick="@command(before=winRegistrarRecursoJerarquico.onClose())" />
				<!-- 					onClick="@command('abrir',before=winRegistrarReconsideracion.onClose())" -->
			</div>
		</hbox>
	</div>
</window>
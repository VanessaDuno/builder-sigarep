<?page title="Sistema Integrado en Apoyo a la Gestión del Régimen de Repitencia y Permanencia"?>
<zk>
	<!-- Css -->
	<style src="widgets/css/style.css" />
	<html>
		<script type="text/javascript" src="widgets/js/DP.js"></script>
		<script type="text/javascript" defer="true">
			window.onload = DP.inicio;
		</script>
	</html>
	<!-- Inicio de la estructura del portal principal -->
	<borderlayout hflex="1" vflex="1"
		apply="org.zkoss.bind.BindComposer"
		viewModel="@id('vm')@init('sigarep.viewmodels.transacciones.VMPortalPrincipal')">

		<!-- Inicio del encabezado y el menú horizontal -->
		<north size="120px">
			<borderlayout>
				<north size="95px" border="none">
					<include
						src="WEB-INF/sigarep/vistas/portal/externo/Header.zul" />
				</north>
				<south border="none">
					<include
						src="WEB-INF/sigarep/vistas/portal/externo/MenuHorizontal.zul" />
				</south>
			</borderlayout>
		</north>
		<!-- Fin encabezado y menú horizontal -->

		<!-- Inicio del cuerpo de la página -->
		<center border="normal">
			<borderlayout>
				<!-- Inicio cuerpo izquierdo -->
				<west size="25%" border="none">
					<borderlayout>
						<north title="Noticias" size="55%"
							border="none">
							<include src="WEB-INF/sigarep/vistas/portal/externo/Noticias.zul" />
						</north>
						<center title="Guía paso a paso">
							<hbox vflex="1" hflex="1" align="center">
								<image
									src="/imagenes/portal-principal/Guiaico.png"
									style="cursor:pointer" onClick="@command('descargarGuia')"/>
							</hbox>
						</center>
					</borderlayout>
				</west>
				<!-- Fin cuerpo izquierdo -->

				<!-- Inicio cuerpo central -->
				<center border="none">
					<borderlayout>
						<north size="55%" maxsize="300" border="none">
							<include src="WEB-INF/sigarep/vistas/portal/externo/Banner.zul" />
						</north>
						<west title="Consulta tu estado" size="50%">
							<vbox vflex="1" hflex="1" align="center">
								<space />
								<div align="center">
									<label value=" ¿Estás Sancionado?"
										style="color:Black;font:arial;font-size:18px;font-weight:bold" />
								</div>
								<space />
								<hbox align="center">
									<image
										src="/imagenes/portal-principal/busquedaico.png" />
									<label value="Cedula:" />
									<intbox id="intcedula"
										placeholder="Ingrese la Cédula" mold="rounded" maxlength="8" width="150px"
										value="@bind(vm.cedula)" />
									<button label="Buscar" image="/imagenes/iconos/buscar.png"
										onClick="@command('modalEstadoEstudiante')" />
								</hbox>
							</vbox>
						</west>
						<center>
							<borderlayout>
								<north border="none" title="Descargas"
									size="70%">
									<include
										src="WEB-INF/sigarep/vistas/portal/externo/Descargas.zul" />
								</north>
								<center border="none"
									title="Preguntas Frecuentes">
									<hbox align="center" pack="center"
										vflex="1" hflex="1">
										<label
											value="¿Tienes alguna pregunta? Haz click aquí"
											onClick="@command('modalPreguntasFrecuentes')"
											id=" lblPreguntas "
											style="font:arial;cursor:pointer;text-align:center;margin-left:10px;margin-right:10px;" />
									</hbox>
								</center>
							</borderlayout>
						</center>
					</borderlayout>
				</center>
				<!-- Fin cuerpo central -->

				<!-- Inicio enlaces de interes -->
				<south size="80px" border="none">
					<include src="WEB-INF/sigarep/vistas/portal/externo/EnlacesDeInteres.zul" />
				</south>
				<!-- Fin enlaces de interes -->
			</borderlayout>
		</center>

		<!-- Inicio cuerpo derecho -->
		<east size="25%" border="none">
			<borderlayout>

				<!-- Inicio Login -->
				<north title="Iniciar Sesión" size="22%">
					<include src="WEB-INF/sigarep/vistas/portal/externo/login.zul" />
				</north>
				<!-- Fin Login -->

				<!-- Inicio Cronograma de Actividades -->
				<center title="Cronograma de Actividades">
					<include src="WEB-INF/sigarep/vistas/portal/externo/Cronograma.zul" />
				</center>
				<!-- Fin Cronograma de Actividades -->

				<!-- Inicio Twitter -->
				<south title="Twitter" size="45%" autoscroll="true">
					<include src="/widgets/twitter.html" />
				</south>
				<!-- Fin Twitter -->

			</borderlayout>
		</east>
		<!-- Fin cuerpo derecho -->
		<!-- Fin del cuerpo de la página -->

		<!-- Inicio Pie de Página -->
		<south size="21px">
			<include src="WEB-INF/sigarep/vistas/portal/externo/Footer.zul" />
		</south>
		<!-- Fin Pie de Página -->

	</borderlayout>
</zk>
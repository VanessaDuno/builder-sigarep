<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.1.xsd">
 
<http use-expressions="true" access-denied-page="/accesoDenegado.zul">
  <port-mappings>
        <port-mapping http="8080" https="8443"/>
    </port-mappings>
    
    <intercept-url pattern="/index.zul*" requires-channel="any" access="isAuthenticated()"/>
		<session-management session-fixation-protection="none" />
		<form-login login-page="/portalPrincipal.zul" login-processing-url="/j_spring_security_check" default-target-url="/index.zul"
			authentication-failure-url="/accesoDenegado.zul" />
		<logout logout-success-url="/portalPrincipal.zul" invalidate-session="true" />
  </http>
	<authentication-manager>
	   <authentication-provider>
		<jdbc-user-service data-source-ref="dataSource"
 
			 users-by-username-query="
		      select nombre_usuario,clave,estado 
		      from usuario where nombre_usuario=?" 
 
		   authorities-by-username-query="
		      select u.nombre_usuario, g.nombre from usuario u, usuario_grupo ug,grupo g 
		      where u.nombre_usuario = ug.nombre_usuario and ug.id_grupo = g.id_grupo and u.nombre_usuario =?"

		      />
	   </authentication-provider>
	</authentication-manager>
</beans:beans>